# class                         border  backg   text    child_border


client.focused             $blue $blackblue $blue $blue
client.focused_inactive    $blue $blackblue $blue $blackblue
client.unfocused           $blackblue $blackblue $blue $blue

client.urgent              #bd2727 #e79e27 #333333 #27bdbd

# Use Mouse+$mod to drag floating windows to their wanted position
# floating_modifier $mod

# start a terminal
bindsym $mod+Return exec xfce4-terminal

# Mouse Emulator
mode "mouse" {

        # Move cursor emulator
        bindsym Right $exe xdotool mousemove_relative 15 0
        bindsym Left $exe xdotool mousemove_relative -- -15 0
        bindsym Down $exe xdotool mousemove_relative 0 15
        bindsym Up $exe xdotool mousemove_relative -- 0 -15

        bindsym d $exe xdotool mousemove_relative 100 0
        bindsym a $exe xdotool mousemove_relative -- -100 0
        bindsym s $exe xdotool mousemove_relative 0 100
        bindsym w $exe xdotool mousemove_relative -- 0 -100

        # Click cursor emulator
        bindsym Return $exe xdotool click 1
        bindsym 4 $exe xdotool click 3
        bindsym 5 $exe xdotool click 4
        bindsym 2 $exe xdotool click 5

        bindsym q $exe xdotool click 1
        bindsym e $exe xdotool click 3

        # back to normal: Escape or $mod+m
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"

}


bindsym $mod+m mode "mouse"

# Move cursor emulator
bindsym Ctrl+Mod1+6 $exe xdotool mousemove_relative 35 0
bindsym Ctrl+Mod1+4 $exe xdotool mousemove_relative -- -35 0
bindsym Ctrl+Mod1+2 $exe xdotool mousemove_relative 0 35
bindsym Ctrl+Mod1+8 $exe xdotool mousemove_relative -- 0 -35

# Click cursor emulator
bindsym Mod1+Enter $exe xdotool click 1
bindsym Ctrl+Mod1+9 $exe xdotool click 3
bindsym Ctrl+Mod1+5 $exe xdotool click 4
bindsym Ctrl+Mod1+0 $exe xdotool click 5

# kill focused window
bindsym $mod+q kill

